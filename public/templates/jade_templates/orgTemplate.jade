for org in locals.models
    .row
        .col-md-12
            .panel.roundrequest
                .form-inline
                    .container
                        .requestmargin.text-center
                            a#orgName.col-md-12.orgname(target="_blank", href='#{org.get("website")}') #{org.get("name")}
                                // <a class="requestusername" target="_blank" href="https://womenscenter.utah.edu/">
                                // Women's Resource Center
                                // </a>
                            .row
                                #orgImage.col-md-2
                                    img.orglogo(src='#{org.get("image")}')
                                     //<img class="orglogo" src="/img/u_logo.png">
                                .col-md-10
                                    #orgDescription.orgmessage.panel-body #{org.get("description")}
                                        // The Women’s Resource Center (WRC) at the University of Utah serves as the central resource for educational and support services for women.  Honoring the complexities of women’s identities, the WRC facilitates choices and changes through programs, counseling, and training grounded in a commitment to advance social justice and equality.
                                    .row.topborder
                                        .col-md-6
                                            a#orgWebsite(target="_blank", href="#{org.get("website")}") #{org.get("website")}
                                                // <a target="_blank" href="https://womenscenter.utah.edu/">https://womenscenter.utah.edu/</a>
                                            #orgPhone #{org.get("phoneNumber")}
                                                // 801-581-8030
                                            #orgEmail #{org.get("email")}
                                        .col-md-6
                                            #orgAddress #{org.get("address")}
                                                // <p>A. Ray Olpin Union 200 S. Central Campus Dr, Room 411
                                                // Salt Lake City, UT 84112</p>
