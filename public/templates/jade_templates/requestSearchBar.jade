.container-fluid
    .row(style='margin:30px;')
    .row
        .col-md-10.no-padding
            .input-group
                .input-group-btn
                    .btn-group(role='group')
                        button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                            | Filter
                            span.caret(style='margin-left:5px;')
                        ul#searchByTags.dropdown-menu
                    .btn-group(role='group')
                        button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                            | Order by
                            span.caret(style='margin-left:5px;')
                        ul#orderBy.dropdown-menu
                            li
                                a(href='#', data-value='new', data-tid=1, data-group='requesttags', tabindex='-1') new to old
                            li
                                a(href='#', data-value='old', data-tid=2, data-group='requesttags', tabindex='-1') old to new
                            li.divider
                            li
                                a(href='#', data-value='low', data-tid=3, data-group='requesttags', tabindex='-1') low to high
                            li
                                a(href='#', data-value='high', data-tid=4, data-group='requesttags', tabindex='-1') high to low
                input#searchByTerm.form-control(type='text', name='x', placeholder='Search tags...')
                span#goFilterRequests.input-group-addon.btn
                    span.glyphicon.glyphicon-search
        .col-md-2.no-padding(style='padding-left:20px;')
            button#newRequestBtn.btn.turquoise.whitetext(data-toggle='modal', data-target='#newRequestModal')
                i.fas.fa-plus(style='width:100%;top-padding:-1%;')