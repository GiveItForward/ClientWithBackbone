.container-fluid
    for org in locals.models
        .row
            .org-panel.form-inline
                .row.form-inline(style='margin:1%;')
                    #orgImage.col-md-2.text-center
                        img.orglogo(style='margin:2%;', src='#{org.get("image")}')
                        button#approveOrgBtn.btn.horizontal-iconbox.turquoise.whitetext(style='margin-right:2%', data-oid='#{org.get("oid")}', data-name='#{org.get("name")}') approve
                        button#denyOrgBtn.btn.horizontal-iconbox.orange.whitetext(data-oid='#{org.get("oid")}', data-name='#{org.get("name")}') deny
                    .col-md-10.text-center
                        a#orgName.col-md-12.orgname(target="_blank", href='#{org.get("website")}') #{org.get("name")}
                        .orgDescriptionDiv.off-white
                            #orgBio #{org.get("description")}
                        .row.topborder
                            .col-md-6
                                a#orgWebsite(target="_blank", href='#{org.get("website")}') #{org.get("website")}
                                #orgPhone #{org.get("phone")}
                                #orgEmail #{org.get("email")}
                            .col-md-6
                                #orgAddress #{org.get("address")}
