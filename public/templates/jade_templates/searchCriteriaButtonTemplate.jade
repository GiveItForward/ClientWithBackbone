.row
    if locals.btnColor === 'yellow'
        button.btn.yellow.whitetext(id='#{locals.tid}', style='margin-bottom:5px; font-size: 14pt;') #{locals.tagname}
            span.img-circle(aria-hidden="true", style='margin-left:5px;') &times;
