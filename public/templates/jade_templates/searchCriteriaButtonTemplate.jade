        button.btn.orange.whitetext(id='#{locals.tid}', style='margin-bottom:5px; font-size: 14pt;') #{locals.tagname}
            span(aria-hidden="true", style='margin-left:5px;') &times;
    else
        button.btn.turquoise.whitetext(id='#{locals.tid}#{locals.tagname}', data-value='#{locals.tagname}', style='margin-bottom:5px; font-size: 14pt;') #{locals.tagname}
